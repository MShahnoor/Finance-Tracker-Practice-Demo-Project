<h2>User Details</h2>


    <div class="card card-header display-result">
        <table class="col-md-12">
            <tbody>
                    <tr>
                        <td>  <strong>Name: </strong> <%= @user.get_full_name %> </td>
                        <td>  <strong>Email: </strong> <%= @user.email %> </td>
                        <td>
                            <% if current_user.not_friend_with?(@user.id)  %>

                                <%= link_to 'Follow', friendships_path(friend: @user), class: 'btn btn-primary',method: :post%>
                            <% else %>
                                <span class='badge text-bg-light'>Already Friend</span>
                            <% end  %>
                        </td>
                    </tr>
            </table>
        </tbody>
    </div>

<% if !@tracked_stocks.empty?  %>
    <%= render 'stocks/list' %>
<% else %>
    <p class='lead'>This user is not tracking any stocks.</p>
<% end  %>
